<!--
    Nom :           TaskInputControl
    Description :   Contrôle de saisie des tâches.
    Auteur :        David Brousseau
-->
<UserControl x:Class="FTConnectee.TaskInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:FTConnectee"
             mc:Ignorable="d">
    
    <!--Bordure délimitant le contrôle.-->
    <Border Background="White"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="5"
            MinHeight="30"
            MinWidth="300">

        <!--Grille d'organisation du contenu.-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--TextBox muni d'une fenêtre contextuelle.-->
            <TextBox x:Name="DescriptionBox"
                     Background="Transparent"
                     BorderThickness="0"
                     FontSize="14"
                     Foreground="#333"
                     Grid.Column="0"
                     Margin="0"
                     MinHeight="28"
                     VerticalContentAlignment="Center" />

            <!--Bouton intégré au TextBox.-->
            <Button Background="Transparent"
                    BorderThickness="0"
                    Content="2"
                    Cursor="Hand"
                    FontFamily="Webdings"
                    FontSize="18"
                    Foreground="#555"
                    Grid.Column="1"
                    MinHeight="28"
                    MinWidth="28"
                    ToolTip="Ouvrir dans une nouvelle fenêtre."
                    VerticalContentAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
